<Window x:Class="KbLayoutProtoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KbLayoutProtoWpf" 
        AllowsTransparency="True" 
        Topmost="True" 
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="80" Width="625" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False"
        WindowStyle="None" 
        Loaded="MainWindow_OnLoaded"
        Background="Transparent"
      PreviewMouseDown="MainWindow_OnPreviewMouseButtonDown">
    <TextBlock  Name="contentControl" Margin="5" Background="Transparent" FontFamily="Cascadia Mono">
        </TextBlock>
</Window>
